{
    "extends": [
        "tslint:latest",
        "tslint-react"
    ],
    "rules": {
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "semicolon": [
            true,
            "never"
        ],
        "max-line-length": [
            true,
            160
        ],
        "jsx-curly-spacing": [
            { "when": "always" }
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ]
    }
}
